<div class="container">
  <div class="row">
    <div class="col-sm-12 col -md-8 col-lg-5 px-5 mx-auto">
      <h2>User Info</h2>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>

      <div class="form-group">
        <label for="user_name">Name</label>
      <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="user_image">ProfileImage</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
      <%= f.text_field :introduction %>
      </div>
      <div class="form-group">

      </div>



      <%= f.submit "Update User" ,class: "btn btn-secondary" %>
    <% end %>
    </div>
  </div>
</div>



