<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
    <div class="row">
       <%= render 'info', user: @user, book: @book %>

        <div class="col-md-8 offset-md-1">
         <h1>Users</h1>
         <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th>image</th>
            <th>name</th>
           </tr>
          </thead>
          <tbody>
           <% @users.each do |user| %>
           <tr>
            <td><img src="/assets/image/No_image.png" width="80" height="80" ></td>
            <td><%= user.name %></td>
            <td> <%= link_to 'Show', user_path(user.id) %></td>
           </tr>
           <%end%>
          </tbody>
         </table>
        </div>
    </div>
</div>
